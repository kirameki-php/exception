<?xml version="1.0"?>
<phpunit bootstrap="vendor/autoload.php"
         executionOrder="depends,defects"
         verbose="true"
         colors="true">
    <coverage>
        <include>
            <directory suffix=".php">./src</directory>
        </include>
        <exclude>
            <file>src/ExceptionHandler.php</file>
        </exclude>
    </coverage>
    <testsuites>
        <testsuite name="default">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>
</phpunit>
